# Widow Colours 
#                         border  background text    indicator
  client.focused          $base03 $base03    $base03 $base05 
  client.focused_inactive $base03 $base03    $base03 $base05 
  client.unfocused        $base01 $base01    $base01 $base01 
  client.urgent           $base06 $base06    $base06 $base06 

  hide_edge_borders none

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        i3bar_command i3bar -t
        height 20
        status_command i3blocks -c ~/.i3/i3blocks.conf
        font pango: Roboto-Thin 50, Awesome 12,  FontAwesome 10
        strip_workspace_numbers yes
         colors {
              separator $base03
              background $base00
              statusline $base02
        #                        border  background text
              focused_workspace  $base00 $base00    $base03 #Active
              active_workspace   $base00 $base00    $base03 #Active
              inactive_workspace $base00 $base00    $base02 #Inactive
              urgent_workspace   $base00 $base00    $base06 #Urgent
    }

}

